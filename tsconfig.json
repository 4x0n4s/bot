{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*", "./lib/functions/*"],
      "@lib": ["./lib/index"],
      "@typings": ["./lib/typings/index"],
      "@typings/*": ["./lib/typings/*"],
      "@decorators": ["lib/decorators"],
      "@logger": ["lib/logger/index", "lib/logger/*"]
    }
  },
}
